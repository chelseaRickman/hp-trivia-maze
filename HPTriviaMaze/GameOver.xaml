<Window x:Name="GameOverWindow" x:Class="HPTriviaMaze.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HPTriviaMaze"
        mc:Ignorable="d"
        Title="Game Over" Height="450" Width="800" WindowState="Normal" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFAD87FD" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Image x:Name="imageGameOver" Source="/images/game_over.jpg" HorizontalAlignment="Left" Height="222" VerticalAlignment="Top" Width="622" Margin="88,152,0,0" Stretch="UniformToFill"/>
        <TextBlock x:Name="txtGameOver" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="88,27,0,0" Width="622" Height="120" FontSize="85" TextAlignment="Center" Foreground="#FF8467C2" Text="GAME OVER"/>

    </Grid>
</Window>
