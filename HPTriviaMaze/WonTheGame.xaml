<Window x:Name="WonTheGameWindow" x:Class="HPTriviaMaze.WonTheGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HPTriviaMaze"
        mc:Ignorable="d"
        Title="You won!" Height="450" Width="800" WindowState="Normal" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFAD87FD" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Image x:Name="imageYouWon" Source="/images/won_game.jpg" HorizontalAlignment="Left" Height="264" VerticalAlignment="Top" Width="466" Margin="174,147,0,0"/>
        <TextBlock x:Name="txtYouWon" HorizontalAlignment="Left" TextWrapping="Wrap" Text="You won the game!" VerticalAlignment="Top" Margin="56,24,0,0" Height="118" Width="684" TextAlignment="Center" FontSize="72" Foreground="#FFA17EEB"/>

    </Grid>
</Window>
