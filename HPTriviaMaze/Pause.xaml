<Window x:Name="PauseWindow" x:Class="HPTriviaMaze.Pause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HPTriviaMaze"
        mc:Ignorable="d"
        Title="Pause" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFAD87FD" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="txtPaused" HorizontalAlignment="Left" TextWrapping="Wrap" Text="PAUSED" VerticalAlignment="Top" Margin="70,84,0,0" Height="136" Width="655" Foreground="#FFA17EEB" TextAlignment="Center" FontSize="96"/>
        <Button x:Name="btnResume" Content="Resume" HorizontalAlignment="Left" VerticalAlignment="Top" Width="361" Margin="214,283,0,0" Height="66" Background="#FFC9C1E6" FontSize="36" Click="btnResume_Click"/>

    </Grid>
</Window>
